@inject NavigationManager Nav
@inject IAuthService Auth

<AuthorizeView>
    <Authorized>
        <nav class="nav flex-column">
            <NavLink class="nav-link" href="">Home</NavLink>
            <NavLink class="nav-link" href="dashboard">Dashboard</NavLink>
            <button class="btn btn-outline-secondary btn-sm mt-2" @onclick="Logout">Logout</button>
        </nav>
    </Authorized>
    <NotAuthorized>
        <nav class="nav flex-column">
            <NavLink class="nav-link" href="">Home</NavLink>
            <NavLink class="nav-link" href="login">Login</NavLink>
            <NavLink class="nav-link" href="register">Register</NavLink>
        </nav>
    </NotAuthorized>
</AuthorizeView>

@code {
    async Task Logout()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/");
    }
}
