@page "/register"
@inject IAuthService Auth
@inject NavigationManager Nav

<h3>Register</h3>

<div>
    <label>Username</label>
    <input @bind="Model.UserName" />
</div>
<div>
    <label>Email</label>
    <input @bind="Model.Email" />
</div>
<div>
    <label>Password</label>
    <input type="password" @bind="Model.Password" />
</div>
<div>
    <button @onclick="DoRegister">Register</button>
</div>

@if (!string.IsNullOrEmpty(Error))
{
    <p style="color:red">@Error</p>
}

@code {
    RegisterRequest Model = new("", "", "");
    string? Error;

    async Task DoRegister()
    {
        Error = null;
        var ok = await Auth.RegisterAsync(Model);
        if (ok) Nav.NavigateTo("/login");
        else Error = "Register failed";
    }
}
