@page "/dashboard"
@using System.Globalization
@attribute [Authorize]

<MudStack Spacing="4" AlignItems="AlignItems.Start" Class="mud-width-full">
    <MudText Typo="Typo.h3">@Loc["Dashboard"]</MudText>
    
    <MudStack Spacing="1" AlignItems="AlignItems.Start" Class="mud-width-full">
        <MudText Typo="Typo.h6">@Loc["DashboardWelcome"]</MudText>
        <MudAlert Severity="Severity.Normal" Variant="Variant.Filled" Style="width: fit-content; min-width: 300px;">
            @Loc["LoggedInAlert"]
        </MudAlert>
    </MudStack>
</MudStack>
