@page "/upcoming-events"
@using Platform.Blazor.Services.Events
@using Platform.Data.DTOs
@inject IEventsService EventsService
@inject ISnackbar Snackbar
@using Microsoft.Extensions.Localization
@using Platform.Blazor.Resources

@inject IStringLocalizer<AppStrings> Loc
@using System.Globalization

<MudText Typo="Typo.h5" Class="mb-4">@Loc["UpcomingEvents"]</MudText>

@if (_loading)
{
    <MudProgressCircular Indeterminate="true" Class="ma-4" />
}
else if (!_events.Any())
{
    <MudAlert Severity="Severity.Info">@Loc["NoUpcomingEventsFound"]</MudAlert>
}
else
{
    <MudGrid>
        @foreach (var evt in _events)
        {
            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="3" Class="h-100">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@(CultureInfo.CurrentCulture.Name == "ar-EG" ? evt.NameAr : evt.Name)</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@(CultureInfo.CurrentCulture.Name == "ar-EG" ? evt.EventType?.NameAr : evt.EventType?.Name)</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudChip T="string" Size="Size.Small" Color="Color.Primary" Variant="Variant.Outlined">@evt.StartDate.ToString("MMM dd", CultureInfo.CurrentCulture)</MudChip>
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.body2">
                                <MudIcon Icon="@Icons.Material.Filled.AccessTime" Size="Size.Small" Class="mr-1" />
                                @evt.StartDate.ToString("t", CultureInfo.CurrentCulture) - @evt.EndDate.ToString("t", CultureInfo.CurrentCulture)
                            </MudText>
                            <MudText Typo="Typo.body2">
                                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Class="mr-1" />
                                @(CultureInfo.CurrentCulture.Name == "ar-EG" ? evt.LocationAr : evt.Location)
                            </MudText>
                             @if (!string.IsNullOrEmpty(evt.Description) || !string.IsNullOrEmpty(evt.DescriptionAr))
                            {
                                <MudText Typo="Typo.body2" Class="mt-2 text-truncate">@(CultureInfo.CurrentCulture.Name == "ar-EG" ? evt.DescriptionAr : evt.Description)</MudText>
                            }
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
}

@code {
    private List<Event> _events = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadEvents();
    }

    private async Task LoadEvents()
    {
        _loading = true;
        try
        {
            // Fetch events for the next year
            var start = DateTime.Now;
            var end = DateTime.Now.AddYears(1);
            _events = await EventsService.GetEventsByRangeAsync(start, end);
            _events = _events.OrderBy(e => e.StartDate).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Loc["Error"]}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }
}
