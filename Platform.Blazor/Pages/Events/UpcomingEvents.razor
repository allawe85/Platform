@page "/upcoming-events"
@using Platform.Blazor.Services.Events
@using Platform.Data.DTOs
@inject IEventsService EventsService
@inject ISnackbar Snackbar
@using Microsoft.Extensions.Localization
@using Platform.Blazor.Resources
@inject IStringLocalizer<AppStrings> Loc

<MudText Typo="Typo.h5" Class="mb-4">@Loc["UpcomingEvents"]</MudText>

@if (_loading)
{
    <MudProgressCircular Indeterminate="true" Class="ma-4" />
}
else if (!_events.Any())
{
    <MudAlert Severity="Severity.Info">@Loc["NoUpcomingEvents"]</MudAlert>
}
else
{
    <MudGrid>
        @foreach (var evt in _events)
        {
            var name = GetLocalizedValue(evt.Name, evt.NameAr);
            var description = GetLocalizedValue(evt.Description, evt.DescriptionAr);
            var location = GetLocalizedValue(evt.Location, evt.LocationAr);
            var eventType = evt.EventType != null ? GetLocalizedValue(evt.EventType.Name, evt.EventType.NameAr) : "";

            <MudItem xs="12" sm="6" md="4">
                <MudCard Elevation="3" Class="h-100">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@name</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@eventType</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudChip T="string" Size="Size.Small" Color="Color.Primary" Variant="Variant.Outlined">@evt.StartDate.ToString("MMM dd")</MudChip>
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.body2">
                                <MudIcon Icon="@Icons.Material.Filled.AccessTime" Size="Size.Small" Class="mr-1" />
                                @evt.StartDate.ToShortTimeString() - @evt.EndDate.ToShortTimeString()
                            </MudText>
                            <MudText Typo="Typo.body2">
                                <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Class="mr-1" />
                                @location
                            </MudText>
                             @if (!string.IsNullOrEmpty(description))
                            {
                                <MudText Typo="Typo.body2" Class="mt-2 text-truncate">@description</MudText>
                            }
                        </MudStack>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
}

@code {
    private List<Event> _events = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadEvents();
    }

    private async Task LoadEvents()
    {
        _loading = true;
        try
        {
            // Fetch events for the next year
            var start = DateTime.Now;
            var end = DateTime.Now.AddYears(1);
            _events = await EventsService.GetEventsByRangeAsync(start, end);
            _events = _events.OrderBy(e => e.StartDate).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Loc["Error"]}: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private bool IsArabic => System.Globalization.CultureInfo.CurrentCulture.Name.StartsWith("ar", StringComparison.OrdinalIgnoreCase);

    private string GetLocalizedValue(string en, string ar)
    {
        if (IsArabic && !string.IsNullOrEmpty(ar))
        {
            return ar;
        }
        return en;
    }
}
