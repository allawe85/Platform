@using Platform.Data.DTOs
@using Platform.Blazor.Services.Announcements
@using Platform.Blazor.Resources
@using Microsoft.Extensions.Localization
@inject IAnnouncementsService AnnouncementsService
@inject ISnackbar Snackbar
@inject IStringLocalizer<AppStrings> Loc

<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="@Loc["AnnouncementTitle"]" @bind-Value="Announcement.Title" Required="true" RequiredError="@Loc["Required"]" />
        <MudTextField T="string" Label="@Loc["AnnouncementTitleAr"]" @bind-Value="Announcement.TitleAr" Required="true" RequiredError="@Loc["Required"]" />
        <MudTextField T="string" Label="@Loc["AnnouncementDescription"]" @bind-Value="Announcement.Description" Lines="3" Required="true" RequiredError="@Loc["Required"]" />
        <MudTextField T="string" Label="@Loc["AnnouncementDescriptionAr"]" @bind-Value="Announcement.DescriptionAr" Lines="3" />
        <MudCheckBox T="bool" @bind-Checked="Announcement.IsActive" Label="@Loc["IsActive"]" Color="Color.Primary" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@Loc["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">@Loc["Save"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public MudDialogInstance DialogInstance { get; set; }

    [Parameter] public Announcement Announcement { get; set; } = new Announcement();

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(Announcement.Title) || string.IsNullOrWhiteSpace(Announcement.TitleAr) || string.IsNullOrWhiteSpace(Announcement.Description))
        {
            Snackbar.Add(Loc["RequiredFieldsError"], Severity.Warning);
            return;
        }
        try
         {
            if (Announcement.Id == 0)
            {
                // Create
                Announcement.CreatedDate = DateTime.Now;
                await AnnouncementsService.CreateAnnouncementAsync(Announcement);
                Snackbar.Add(Loc["AnnouncementCreated"], Severity.Success);
            }
            else
            {
                // Update
                await AnnouncementsService.UpdateAnnouncementAsync(Announcement.Id, Announcement);
                Snackbar.Add(Loc["AnnouncementUpdated"], Severity.Success);
            }
            DialogInstance?.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    void Cancel() => DialogInstance?.Cancel();
}
