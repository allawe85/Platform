@using Platform.Data.DTOs
@using Platform.Blazor.Services.Leaves
@using MudBlazor
@inject LeaveService LeaveService

<MudOverlay @bind-Visible="Visible" DarkBackground="true" AutoClose="false" ZIndex="9999">
    <MudPaper Class="pa-4" Style="width: 500px; max-width: 90vw; max-height: 90vh; overflow-y: auto;">
        <MudText Typo="Typo.h6" Class="mb-4">New Leave Request</MudText>
        
        <MudSelect T="int?" Label="Leave Type" @bind-Value="LeaveRequest.LeaveTypeId" Required="true" RequiredError="Type is required">
             @foreach (var type in LeaveTypes)
            {
                <MudSelectItem Value="@((int?)type.Id)">@type.NameAr</MudSelectItem>
            }
        </MudSelect>
        <MudDatePicker Label="Start Date" @bind-Date="StartDate" />
        <MudDatePicker Label="End Date" @bind-Date="EndDate" />
        <MudTextField Label="Details" @bind-Value="LeaveRequest.Details" Lines="3" />
        
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mt-2">@ErrorMessage</MudAlert>
        }

        <MudStack Row="true" Justify="Justify.FlexEnd" Class="mt-4">
            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Submit</MudButton>
        </MudStack>
    </MudPaper>
</MudOverlay>

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback<bool> VisibleChanged { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    [Parameter] public List<LeaveType> LeaveTypes { get; set; } = new();
    [Parameter] public int EmployeeId { get; set; }

    private Leave LeaveRequest = new Leave();
    private DateTime? StartDate = DateTime.Today;
    private DateTime? EndDate = DateTime.Today;
    private string ErrorMessage;

    protected override void OnParametersSet()
    {
        if (Visible && LeaveRequest == null) // Reset on showing if needed, or keep state
        {
            // Reset logic if desired every time it opens
        }
    }

    private async Task Submit()
    {
        ErrorMessage = null;
        if (LeaveRequest.LeaveTypeId == null)
        {
            ErrorMessage = "Please select a leave type.";
            return;
        }
        
        if (StartDate == null || EndDate == null)
        {
             ErrorMessage = "Please select dates.";
             return;
        }

        LeaveRequest.EmployeeId = EmployeeId;
        LeaveRequest.StartDate = StartDate.Value;
        LeaveRequest.EndDate = EndDate.Value;

        var response = await LeaveService.SubmitLeaveRequest(LeaveRequest);
        if (response.IsSuccessStatusCode)
        {
            // Reset for next time
            LeaveRequest = new Leave(); 
            StartDate = DateTime.Today;
            EndDate = DateTime.Today;
            
            await Close(true);
        }
        else
        {
            ErrorMessage = await response.Content.ReadAsStringAsync();
        }
    }

    private async Task Close(bool result)
    {
        Visible = false;
        await VisibleChanged.InvokeAsync(false);
        await OnClose.InvokeAsync(result);
    }

    private async Task Cancel() => await Close(false);
}
