@using Platform.Data.DTOs
@using Platform.Blazor.Services.Leaves
@using MudBlazor
@inject LeaveService LeaveService

<MudDialog>
    <DialogContent>
        <MudSelect T="int?" Label="@Loc["LeaveType"]" @bind-Value="LeaveRequest.LeaveTypeId" Required="true" RequiredError="@Loc["SelectLeaveType"]"
                   RelativeWidth="false" Dense="true" AnchorOrigin="Origin.CenterCenter" TransformOrigin="Origin.CenterCenter">
                @foreach (var type in LeaveTypes)
            {
                <MudSelectItem Value="@((int?)type.Id)">@type.NameAr</MudSelectItem>
            }
        </MudSelect>
        <MudDatePicker Label="@Loc["StartDate"]" @bind-Date="StartDate" PickerVariant="PickerVariant.Dialog" />
        <MudDatePicker Label="@Loc["EndDate"]" @bind-Date="EndDate" PickerVariant="PickerVariant.Dialog" />
        <MudTextField Label="@Loc["Details"]" @bind-Value="LeaveRequest.Details" Lines="3" />
        
        @if (!string.IsNullOrEmpty(ErrorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mt-2">@ErrorMessage</MudAlert>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@Loc["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">@Loc["Save"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public List<LeaveType> LeaveTypes { get; set; } = new();
    [Parameter] public int EmployeeId { get; set; }

    private Leave LeaveRequest = new Leave();
    private DateTime? StartDate = DateTime.Today;
    private DateTime? EndDate = DateTime.Today;
    private string ErrorMessage;

    protected override async Task OnInitializedAsync()
    {
         if (LeaveTypes == null || !LeaveTypes.Any())
         {
             LeaveTypes = await LeaveService.GetLeaveTypes();
         }
    }

    private async Task Submit()
    {
        ErrorMessage = null;
        if (LeaveRequest.LeaveTypeId == null)
        {
            ErrorMessage = Loc["SelectLeaveType"];
            return;
        }
        
        if (StartDate == null || EndDate == null)
        {
                ErrorMessage = Loc["SelectDates"];
                return;
        }

        LeaveRequest.EmployeeId = EmployeeId;
        LeaveRequest.StartDate = StartDate.Value;
        LeaveRequest.EndDate = EndDate.Value;

        var response = await LeaveService.SubmitLeaveRequest(LeaveRequest);
        if (response.IsSuccessStatusCode)
        {
            MudDialog.Close(DialogResult.Ok(true));
        }
        else
        {
            ErrorMessage = await response.Content.ReadAsStringAsync();
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
