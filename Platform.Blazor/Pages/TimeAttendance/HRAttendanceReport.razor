@page "/attendance/report"
@using Platform.Data.DTOs
@using Platform.Blazor.Services.TimeAttendance
@inject ITimeAttendanceService AttendanceService
@inject ISnackbar Snackbar

@inject IStringLocalizer<AppStrings> Loc
@using Microsoft.Extensions.Localization
@using Platform.Blazor.Resources
@using System.Globalization

<PageTitle>@Loc["HRAttendanceReportTitle"]</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">@Loc["AttendanceReport"]</MudText>

    <MudPaper Class="pa-4 mb-4" Elevation="2">
        <MudGrid>
            <MudItem xs="12" sm="4">
                <MudDatePicker Label="@Loc["FromDate"]" @bind-Date="dateFrom" />
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudDatePicker Label="@Loc["ToDate"]" @bind-Date="dateTo" />
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudTextField @bind-Value="filterEmployeeId" Label="@Loc["EmployeeIdOptional"]" Variant="Variant.Outlined" />
            </MudItem>
            <MudItem xs="12" class="d-flex justify-end">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="GenerateReport" Disabled="isLoading">@Loc["GenerateReport"]</MudButton>
            </MudItem>
        </MudGrid>
    </MudPaper>

    @if (isLoading)
    {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-4" />
    }

    <MudTable Items="@reportData" Hover="true" Striped="true" Filter="new Func<TimeAttendance,bool>(FilterFunc)">
        <HeaderContent>
            <MudTh>@Loc["ID"]</MudTh>
            <MudTh>@Loc["EmployeeID"]</MudTh>
            <MudTh>@Loc["Date"]</MudTh>
            <MudTh>@Loc["Time"]</MudTh>
            <MudTh>@Loc["Type"]</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="@Loc["ID"]">@context.Id</MudTd>
            <MudTd DataLabel="@Loc["EmployeeID"]">@context.EmployeeId</MudTd>
            <MudTd DataLabel="@Loc["Date"]">@context.TransactionTime.ToString("d", CultureInfo.CurrentCulture)</MudTd>
            <MudTd DataLabel="@Loc["Time"]">@context.TransactionTime.ToString("T", CultureInfo.CurrentCulture)</MudTd>
            <MudTd DataLabel="@Loc["Type"]">
                <MudChip T="string" Color="@(context.TransactionType == "IN" ? Color.Success : Color.Error)" Size="Size.Small">@context.TransactionType</MudChip>
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</MudContainer>

@code {
    private DateTime? dateFrom = DateTime.Today.AddDays(-7);
    private DateTime? dateTo = DateTime.Today;
    private int? filterEmployeeId;
    private bool isLoading = false;
    private List<TimeAttendance> reportData = new List<TimeAttendance>();

    private async Task GenerateReport()
    {
        if (dateFrom == null || dateTo == null)
        {
            Snackbar.Add(Loc["PleaseSelectDateRange"], Severity.Warning);
            return;
        }

        isLoading = true;
        try
        {
            // Adding time components to ensure full day coverage
            var start = dateFrom.Value.Date;
            var end = dateTo.Value.Date.AddDays(1).AddTicks(-1);
            
            // Treat 0 as null for ease of use in text field
            int? empId = (filterEmployeeId.HasValue && filterEmployeeId.Value > 0) ? filterEmployeeId : null;

            reportData = await AttendanceService.GetReportAsync(start, end, empId);
            
            if (!reportData.Any())
            {
                Snackbar.Add(Loc["NoRecordsFound"], Severity.Info);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"{Loc["Error"]}: {ex.Message}", Severity.Error);
        }
        finally
        {
            isLoading = false;
        }
    }

    private bool FilterFunc(TimeAttendance element) => true; // Client-side filter placeholder if needed
}
