@using Platform.Data.DTOs
@using MudBlazor
@inject ISnackbar Snackbar

<MudDialog @bind-IsVisible="Visible" Options="DialogOptions">
    <TitleContent>
        <MudText Typo="Typo.h6">@Title</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Name" @bind-Value="Model.Name" For="@(() => Model.Name)" />
        <MudTextField Label="Name (Arabic)" @bind-Value="Model.NameAr" For="@(() => Model.NameAr)" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback<bool> VisibleChanged { get; set; }
    
    [Parameter] public HierarchyLevel Model { get; set; } = new();
    [Parameter] public string Title { get; set; } = "Hierarchy Level";
    
    [Parameter] public EventCallback<HierarchyLevel> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private DialogOptions DialogOptions = new() { FullWidth = true, MaxWidth = MaxWidth.Small };

    async Task Submit()
    {
        await OnSave.InvokeAsync(Model);
        // Parent handles closing
    }

    async Task Cancel()
    {
        await OnCancel.InvokeAsync();
        // Parent handles closing
    }
}
