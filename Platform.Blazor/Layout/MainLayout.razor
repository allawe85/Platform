@inherits LayoutComponentBase
@inject IAuthService Auth
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthStateProvider
@using System.Security.Claims
@using Platform.Blazor.Services.Auth
@using System.Globalization
@inject IStringLocalizer<AppStrings> Loc

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6" Class="ml-3">Platform</MudText>
        <MudSpacer />
        @if (!string.IsNullOrEmpty(_username))
        {
            <MudText Class="mr-4">@Loc["Welcome"], @_username</MudText>
            <MudIconButton Icon="@Icons.Material.Filled.Language" Color="Color.Inherit" OnClick="ToggleLanguage" />
        }
        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End">
            <MudMenuItem OnClick="Logout">Logout</MudMenuItem>
        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">@Loc["Dashboard"]</MudNavLink>
        <MudNavGroup Title="@Loc["HierarchiesManagement"]" Icon="@Icons.Material.Filled.AccountTree">
                <MudNavLink Href="/hierarchy-levels" Icon="@Icons.Material.Filled.List">@Loc["Levels"]</MudNavLink>
                <MudNavLink Href="/hierarchies" Icon="@Icons.Material.Filled.Schema">@Loc["Hierarchies"]</MudNavLink>
            <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavGroup Title="Events" Icon="@Icons.Material.Filled.Event" Expanded="true">
                <MudNavLink Href="/events" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.CalendarMonth">Calendar</MudNavLink>
                <MudNavLink Href="/event-types" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Category">Event Types</MudNavLink>
            </MudNavGroup>
        <MudNavGroup Title="Hierarchies Management" Icon="@Icons.Material.Filled.AccountTree" Expanded="true">
                <MudNavLink Href="/hierarchy-levels" Icon="@Icons.Material.Filled.List">Levels</MudNavLink>
                <MudNavLink Href="/hierarchies" Icon="@Icons.Material.Filled.Schema">Hierarchies</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="@Loc["HRManagement"]" Icon="@Icons.Material.Filled.People">
                <MudNavLink Href="/employees" Icon="@Icons.Material.Filled.Badge">@Loc["Employees"]</MudNavLink>
                <MudNavLink Href="/assets" Icon="@Icons.Material.Filled.Devices">@Loc["Assets"]</MudNavLink>
                <MudNavLink Href="/documents" Icon="@Icons.Material.Filled.Folder">@Loc["Documents"]</MudNavLink>
                <MudNavLink Href="/accounts" Icon="@Icons.Material.Filled.ManageAccounts">@Loc["Accounts"]</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="@Loc["Configurations"]" Icon="@Icons.Material.Filled.Settings">
                <MudNavLink Href="/asset-statuses" Icon="@Icons.Material.Filled.List">@Loc["AssetStatuses"]</MudNavLink>
                <MudNavLink Href="/asset-types" Icon="@Icons.Material.Filled.Category">@Loc["AssetTypes"]</MudNavLink>
                <MudNavLink Href="/document-types" Icon="@Icons.Material.Filled.Description">@Loc["DocumentTypes"]</MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Polls" Icon="@Icons.Material.Filled.Poll">
                <MudNavLink Href="/polls-management" Icon="@Icons.Material.Filled.List">Management</MudNavLink>
                <MudNavLink Href="/poll-vote" Icon="@Icons.Material.Filled.HowToVote">Vote</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="mt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    string? _username;

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        _username = state.User.Identity?.Name;
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    async Task Logout()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/login");
    }

    async Task ToggleLanguage()
    {
        var currentCulture = CultureInfo.CurrentCulture;
        var newCultureName = currentCulture.Name == "en-US" ? "ar-EG" : "en-US";
        
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "culture", newCultureName);

        Nav.NavigateTo(Nav.Uri, forceLoad: true);
    }
}
